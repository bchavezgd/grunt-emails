<!-- front matter -->
<tr class="front-matter ">
	<td>
		<table class="container">
			<tr height="8" class="spacer-8">
				<td>&nbsp;</td>
			</tr>
			<!-- spacer -->
			<tr>
				<td align="center" class="col-2 p-small light-text">
								<a href="{{ url }}" target="_blank">{{ company }}</a>
				</td>
				<!-- end col 4 -->
				<!-- Second header column with ISSUE|DATE -->
				<td align="center" class="col-4 p-small light-text">
								{{ subject }} | {{ date }}
				</td>
				<!-- end col 2 -->
			</tr>
			<tr height="8" class="spacer-8">
				<td>&nbsp;</td>
			</tr>
			<!-- spacer -->
		</table>
		<!-- end container -->
	</td>
</tr>
<!-- end front matter -->

<!-- masthead -->
<tr bgcolor="#152831" class="masthead heavy-border">
	<td>
		<table class="container">
			<tr>
				<td class="col-6">
					<!-- logo -->
					<table>
						<tr>
							<td>
								<!-- logo sized to fit this frame. -->
								<a href="{{ url }}" target="_blank">
									<img src="{{ logo }}" alt="{{ url }}" class="center">
								</a>
							</td>
						</tr>
					</table>
					<!-- end logo -->
				</td>
			</tr>
		</table>
		<!-- end container -->
	</td>
</tr>
<!-- end masthead -->
