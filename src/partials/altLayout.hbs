<!-- featured trainer -->
<tr class="featured-trainer">
  <td>
    <table class="container">
      <tr>
        <td>
          <table>
            <!-- class="col-6" -->
            <tr>
              <td height="32" class="spacer-32">&nbsp;</td>
            </tr>
            <!-- spacer -->
            <!-- name -->
            <tr>
              <td colspan="3" class="h2 light-text">
                Featured Trainer: {{ content.featured.name }}
              </td>
            </tr>
            <!-- end name -->
            <!-- spacer -->
            <tr height="16">
              <td class="spacer-16">&nbsp;</td>
            </tr>

            <tr>
              <!-- headshot -->
              <!--  -->
              <td>
                <table>
                  <tr>
                    <td class="col-2">
                      <a href="{{ content.featured.link }}" target="_blank">
                      <img width="200" style="max-width: 200px; display: block" src="{{ content.featured.image }}" alt="{{ content.featured.name }}">
                    </a>
                    </td>

                    <td class="col-spacer">&nbsp;</td>

                    <td class="col-4" style="vertical-align: middle;">
                      <!--  -->
                      <table>
                        <tr>
                          <td class="p" style="color: #fff; ">
                            {{{ content.featured.excerpt }}}
                          </td>
                        </tr>
                        <tr height="8" class="spacer-8">
                          <td>&nbsp;</td>
                        </tr>
                        <!-- spacer -->
                        <tr>
                          <td align="center">
                            <a href="{{ content.featured.link }}" target="_blank" class="btn btn-default">{{ content.featured.linkText }}</a>
                          </td>
                        </tr>
                      </table>
                      <!-- end -->
                    </td>

                  </tr>

                </table>

              </td>
              <!-- end -->

            </tr>
            <tr>
              <td height="32" class="spacer-32">&nbsp;</td>
            </tr>
            <!-- spacer -->
          </table>
          <!-- end .col-6 -->
        </td>
      </tr>
    </table>
    <!-- end .container -->
  </td>
</tr>
<!-- end featured Trainer -->
