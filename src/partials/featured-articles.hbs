<!-- featured articles -->
<tr class="featured-articles">
	<td>
		<table class="container">
			<tr>
				<td>
					<!-- header -->
					<table class="header">
						<tr height="16">
							<td class="spacer-16">&nbsp;</td>
						</tr>
						<!-- spacer -->
						<tr>
							{{#each nccpt-vars.articles}}

							<td class="col-3">
								<!-- article -->
								<table align="center" valign="top">
									<tr>
										<td class="h2 light-text">
											{{{ title }}}
										</td>
									</tr>
									<tr height="16">
										<td class="spacer-16">&nbsp;</td>
									</tr>
									<!-- spacer -->
									<tr>
										<td class="p light-text">
											{{{ excerpt }}}
										</td>
									</tr>
									<tr height="16">
										<td class="spacer-16">&nbsp;</td>
									</tr>
									<!-- spacer -->
									<tr>
										<td align="center"><a href="{{ link }}" target="_blank" class="btn btn-default">{{{ more }}}</a>
										</td>
									</tr>

									<tr height="32" class="hidden-big">
										<td class="spacer-32">&nbsp;</td>
									</tr>
									<!-- spacer -->
								</table>
								<!-- end article -->

							</td>
							{{/each}}

						</tr>

						<tr height="16">
							<td class="spacer-16">&nbsp;</td>
						</tr>
						<!-- spacer -->
					</table>
					<!-- end header -->
				</td>
			</tr>
		</table>
		<!-- end container -->
	</td>
</tr>
<!-- end featured articles -->
<tr>
	<td height="32" class="spacer-32">&nbsp;</td>
</tr>
<!-- spacer -->
