<!-- featured articles -->
<tr class="featured-articles">
  <td>
    <table class="container">
      <tr>
        <td>
          <!-- header -->
          <table class="header">
            <tr height="16">
              <td class="spacer-16" colspan="2">&nbsp;</td>
            </tr>
            <!-- spacer -->
            {{#each content.articles}}
            <tr>
              <td class="col-6">

                <!-- article -->
                <table align="center" valign="top">

                  <tr>
                    <td class="h2 light-text">
                      {{{ title }}}
                    </td>
                  </tr>

                  <tr height="16">
                    <td class="spacer-16">&nbsp;</td>
                  </tr>

                  <tr>
                    <td>
                      <a href="{{ link }}" target="_blank">
                        <img src="{{ thumbnail }}" width="590">
                      </a>
                    </td>
                  </tr>

                  <!-- spacer -->
                  <tr height="32">
                    <td class="spacer-32">&nbsp;</td>
                  </tr>


                  <tr>
                    <td class="p light-text">
                      {{{ excerpt }}}
                    </td>
                  </tr>

                  <tr height="16">
                    <td class="spacer-16">&nbsp;</td>
                  </tr>
                  <!-- spacer -->

                  {{#if ceus}}
                  <tr>
                    <td align="center light-text">

                      Get: {{{ceus}}} CEUs

                      <a href="{{ link }}" target="_blank" class="btn btn-default">{{{ more }}}</a>
                    </td>
                  </tr>

                  <!-- spacer -->
                  <tr height="16">
                    <td class="spacer-16">&nbsp;</td>
                  </tr>

                  {{else}}

                  <tr>
                    <td align="center light-text">
                      <a href="{{ link }}" target="_blank" class="btn btn-default">{{{ more }}}</a>
                    </td>
                  </tr>

                  <!-- spacer -->
                  <tr height="16">
                    <td class="spacer-16">&nbsp;</td>
                  </tr>

                  {{/if}}

                </table>
                <!-- end article -->
              </td>
            </tr>

            {{/each}}
          </table>
          <!-- end header -->
        </td>
      </tr>
    </table>
    <!-- end container -->
  </td>
</tr>
<!-- end featured articles -->