<!-- footer -->
<tr class="footer">
	<td>
		<table class="container">
			<tr height="32">
				<td colspan="2" class="spacer-32">&nbsp;</td>
			</tr>
			<!-- spacer -->
			<tr>
				<td class="col-2">
					<table>
						<tr>
							<td class="p light-text">
								Turn your passion into a career! Call a Career Advisor today: <span style="white-space: nowrap;">{{ phone }}</span>
							</td>
						</tr>
						<tr height="16">
							<td class="spacer-16">&nbsp;</td>
						</tr>
						<!-- spacer -->
						<tr>
							<td class="p light-text">
								&copy; {{ company }}
							</td>
						</tr>
					</table>
					<!-- end col 2 -->
				</td>
				<td class="col-4">
					<table>
						<tr>
							<td align="center">
								<a href="{{ url }}" target="_blank">
									<img src="{{ logo }}" alt="{{ company }}">
								</a>
							</td>
						</tr>
					</table>
					<!-- end col 2 -->
				</td>
			</tr>
			{{#if finePrint}}
			{{spacer 8}}
			<!-- fine print -->
			<tr>
				<td colspan="2" class="small light-text">
					{{{finePrint}}}
				</td>
			</tr>
			{{spacer 16}}
			{{else}}
			<tr height="32">
				<td colspan="2" class="spacer-32">&nbsp;</td>
			</tr>
			{{/if}}

			<!-- spacer -->
		</table>
		<!-- end container -->
	</td>
</tr>
<!-- end footer -->
